@model IEnumerable<WebApplicationMusei.Models.Entities.Nazione>

@{
    ViewData["Title"] = "Index";
}

<h1>Nazioni</h1>

<p>
    <a asp-action="Create">Nuovo</a>
</p>
<p>
    <a asp-action="Excel">Scarica excel</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgBandiera)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @if (item.ImgBandiera != null)
                    {
                        <img src="~/uploads/nazioni/@item.Id/@item.ImgBandiera" width="75" />
                    }

            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Dettaglio", "Details",  new { id = item.Id }) |
                @Html.ActionLink("Elimina", "Delete",  new { id = item.Id })
            </td>
        </tr>
    }
    </tbody>
</table>
