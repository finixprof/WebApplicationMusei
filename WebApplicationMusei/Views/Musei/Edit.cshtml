@model WebApplicationMusei.Models.Views.MuseoViewModel
@using WebApplicationMusei.Models.Entities

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Nazione</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="Id" type="hidden" class="form-control" />

            <div class="form-group">
                <label asp-for="Denominazione" class="control-label"></label>
                <input asp-for="Denominazione" class="form-control" />
                <span asp-validation-for="Denominazione" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CittaId" class="control-label"></label>
                @*<input asp-for="NazioneId" class="form-control" />*@
                <select asp-for="CittaId" class="form-control"
                        asp-items="@(new SelectList(Model.ListaCitta, nameof(Citta.Id), nameof(Citta.Nome)))">
                </select>

                <span asp-validation-for="CittaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                @if (ViewData["MsgOk"] != null)
                {
                    <span class="text-success"> @Html.Raw(ViewData["MsgOk"].ToString())</span>
                }
                @if (ViewData["MsgKo"] != null)
                {
                    <span class="text-danger"> @Html.Raw(ViewData["MsgKo"].ToString())</span>
                }
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
