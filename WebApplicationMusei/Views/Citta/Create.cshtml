@model WebApplicationMusei.Models.Views.CittaViewModel
@using WebApplicationMusei.Models.Entities 

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Nuova</h1>

<h4>Città</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NazioneId" class="control-label"></label>
                @*<input asp-for="NazioneId" class="form-control" />*@
                <select asp-for="NazioneId" class="form-control"
                        asp-items="@(new SelectList(Model.Nazioni, nameof(Nazione.Id), nameof(Nazione.Nome)))">
                    <option>Seleziona ...</option>
                </select>

                <span asp-validation-for="NazioneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
